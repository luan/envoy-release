{
  "listeners": [
    {
      "address": "tcp://127.0.0.1:18001",
      "filters": [
        {
          "type": "read",
          "name": "http_connection_manager",
          "config": {
            "codec_type": "auto",
            "stat_prefix": "ingress_http",
            "access_log": [
              {
                "path": "/var/vcap/sys/log/envoy/ingress_http.log",
                "filter": {"type": "not_healthcheck"}
              },
              {
                "path": "/var/vcap/sys/log/envoy/ingress_http_error.log",
                "filter": {"type": "logical_and", "filters": [
                  {"type": "logical_or", "filters": [
                    {"type": "status_code", "op": ">=", "value": 400},
                    {"type": "status_code", "op": "=", "value": 0},
                    {"type": "duration", "op": ">=", "value": 2000},
                    {"type": "traceable_request"}
                  ]
                  },
                  {"type": "not_healthcheck"}
                ]
                }
              },
              {
                "path": "/var/vcap/sys/log/envoy/ingress_http_sampled.log",
                "filter": {"type": "logical_and", "filters": [
                  {"type": "not_healthcheck"},
                  {"type": "runtime", "key": "access_log.ingress_http"}
                ]
                }
              }
            ],
            "route_config": {
              "virtual_hosts": [
                {
                  "name": "bbs",
                  "domains": ["*"],
                  "routes": [
                    {
                      "cluster": "bbs",
                      "timeout_ms": 0,
                      "prefix": "/",
                      "retry_policy": {
                        "retry_on": "5xx,connect-failure,retriable-4xx,refused-stream",
                        "num_retries": 5,
                        "per_try_timeout_ms": 3000
                      }
                    }
                  ]
                }
              ]
            },
            "filters": [
              {
                "type": "decoder",
                "name": "router",
                "config": {}
              }
            ]
          }
        }
      ]
    },
    {
      "address": "tcp://127.0.0.1:18002",
      "filters": [
        {
          "type": "read",
          "name": "tcp_proxy",
          "config": {
            "stat_prefix": "sql_egress",
            "route_config": {
              "routes": [{"cluster": "sql-db"}]
            }
          }
        }
      ]
    }
  ],
  "admin": {
    "access_log_path": "/var/vcap/sys/log/envoy/admin-access.log",
    "address": "tcp://0.0.0.0:19000"
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "bbs",
        "type": "strict_dns",
        "connect_timeout_ms": 2000,
        "lb_type": "random",
        "hosts": [{"url": "tcp://bbs.service.cf.internal:8889"}],
        "health_check": {
          "type": "http",
          "timeout_ms": 1000,
          "interval_ms": 200,
          "unhealthy_threshold": 3,
          "healthy_threshold": 1,
          "path": "/v1/ping"
        },
        "ssl_context": {
          "cert_chain_file": "/var/vcap/jobs/envoy/config/certs/tls.crt",
          "private_key_file": "/var/vcap/jobs/envoy/config/certs/tls.key",
          "ca_cert_file": "/var/vcap/jobs/envoy/config/certs/tls_ca.crt",
          "verify_subject_alt_name": ["bbs.service.cf.internal"],
          "sni": "envoy-bbs"
        },
        "dns_refresh_rate_ms": 1000
      },
      {
        "name": "sql-db",
        "type": "strict_dns",
        "connect_timeout_ms": 250,
        "lb_type": "random",
        "hosts": [{"url": "tcp://sql-db.service.cf.internal:3306"}],
        "health_check": {
          "type": "tcp",
          "timeout_ms": 1000,
          "interval_ms": 200,
          "unhealthy_threshold": 3,
          "healthy_threshold": 1,
          "send": [],
          "receive": []
        },
        "dns_refresh_rate_ms": 1000
      }
    ]
  }
}
